/***************
    Color
****************/

// States colors
$color-primary := #F89406
$color-success := #4ECDC4
$color-warning := #F7CA18
$color-danger := #EC644B

// General colors
$color-text := #141414
$color-link := darken(#ECECEC, 50%)
$color-link-hover := $primary-color
$color-body-background := #ECECEC
$color-background := #ECECEC

/***************
   Button
****************/

$button-padding := 0.3rem 1em
$button-border-radius := 0
$button-text-color := #141414
$button-background-color := white
$button-border := 1px solid lightgray
$button-border-hover := 1px solid #141414

/***************
   Typography
****************/

// Font family
$font-family-primary := sans-serif
$font-family-code := monospace

// Font size
$font-size-small := 0.8rem
$font-size-1 := 1rem
$font-size-2 := 1.5rem
$font-size-3 := 2rem
$font-size-4 := 2.5rem
$font-size-5 := 3rem

// Font weight
$font-weight-normal := normal
$font-weight-bold := bold
$font-weight-bolder := bolder
$font-weight-lighter := lighter

/***************
   Animation
****************/

// Transition
$animation-speed := 0.1s

/***************
   Responsive
****************/

$tablet := 769px
$desktop := 980px
$widescreen := 1180px

